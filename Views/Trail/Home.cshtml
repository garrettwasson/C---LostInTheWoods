<h1 style="text-decoration: underline; font-style: italic;">Lost in the Woods</h1>
<h3>List of local hiking trails</h3>
<table style="border: 2px solid black; padding: 20px;">
    <thead>
        <tr>
            <th style="border: 2px solid black; padding: 10px;">Trail Name</th>
            <th style="border: 2px solid black; padding: 10px;">Trail Length</th>
            <th style="border: 2px solid black; padding: 10px;">Elevation Change</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var trail in ViewBag.AllTrails)
        {
            <tr>
                <td style="border: 2px solid black; padding: 10px;"><a href="/trails/@trail.ID">@trail.Name</a></td>
                <td style="border: 2px solid black; padding: 10px;">@trail.Length Miles</td>
                <td style="border: 2px solid black; padding: 10px;">@trail.Elevation Feet</td>
            </tr>
        }
    </tbody>
</table>
<button type="button" style="margin-top: 10px;"><a style="color: black; text-decoration: none;" href="/trails/new">Add a new Trail</a></button>